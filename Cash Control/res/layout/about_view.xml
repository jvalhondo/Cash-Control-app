<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >
    <TextView
        android:id="@+id/version_element"
        style="@style/boldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"
        android:text="@string/version_element" />
    <TextView
        android:id="@+id/version_value"
        style="@style/itemFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dip"
        android:layout_marginRight="10dip"
        android:text="@string/version_value" />
    <TextView
        android:id="@+id/date_element"
        style="@style/boldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/version_element"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"
        android:text="@string/date_element" />
    <TextView
        android:id="@+id/date_value"
        style="@style/itemFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/version_element"
        android:layout_marginTop="15dip"
        android:layout_marginRight="10dip"
        android:text="@string/date_value" />
    <TextView
        android:id="@+id/system_element"
        style="@style/boldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_element"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"
        android:text="@string/system_element" />
    <TextView
        android:id="@+id/developer_element"
        style="@style/boldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/system_element"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"
        android:text="@string/developer_element" />
    <TextView
        android:id="@+id/developer_value"
        style="@style/itemFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/system_element"
        android:layout_marginTop="15dip"
        android:layout_marginRight="10dip"
        android:text="@string/developer_value" />
</RelativeLayout>